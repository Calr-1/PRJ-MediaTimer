<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timer_10" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primaryColorLightest</item>
        <item name="android:textColorPrimary">@color/onPrimaryLightestColor</item>
        <item name="android:textColorSecondary">@color/onPrimaryLightestColor</item>
        <item name="android:textColorTertiary">@color/onPrimaryLightestColor</item>
        <item name="android:editTextColor">@color/onPrimaryLightestColor</item>
        <item name="colorControlActivated">@color/onPrimaryLightestColor</item>
        <item name="colorControlHighlight">@color/onPrimaryLightestColor</item>


    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:tint">@color/onPrimaryColor</item>

    </style>

    <style name="Theme.Timer_10.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Timer_10.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Timer_10.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>