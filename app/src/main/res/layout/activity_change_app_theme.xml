<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeAppThemeActivity">

    <LinearLayout
        android:id="@+id/colorThemeContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView

            android:id="@+id/ChooseThemeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/choose_your_theme"
            android:textSize="34sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:id="@+id/BlueGreyLayout"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_corners"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ChooseBlueGreyColor"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/primaryColorBlueGrey" />

            <TextView
                android:id="@+id/ChooseBlueGreyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/blue_grey_text"
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/OrangeLayout"

            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_corners"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ChooseOrangeColor"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/primaryColorOrange" />

            <TextView
                android:id="@+id/ChooseOrangeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/orange_text"
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/GreenLayout"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_corners"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ChooseGreenColor"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/primaryColorGreen" />

            <TextView
                android:id="@+id/ChooseGreenColorText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/green_text"
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RedBlackLayout"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_corners"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ChooseRedBlackColor"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/primaryColorVariantRedBlack" />

            <TextView
                android:id="@+id/ChooseRedBlackText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/red_black_text"
                android:textColor="@color/black"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BlackLayout"

            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_corners"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ChooseBlackColor"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/primaryColorBlack" />

            <TextView
                android:id="@+id/ChooseBlackText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/black_text"
                android:textColor="@color/black"

                android:textSize="34sp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>